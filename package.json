  "license": "AGPL",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "\n==================== GLOBAL QA ====================": "",
    "test": "vitest",
    "lint": "concurrently npm:lint-node npm:lint-tsc npm:lint-eslint npm:lint-prettier",
    "lint-node": "check-node-version --package",
    "lint-tsc": "tsc --project . --noEmit",
    "lint-eslint": "eslint --max-warnings 0 $(npm run --silent list-ts)",
    "lint-prettier": "prettier --list-different $(npm run --silent list-ts) $(npm run --silent list-scss)",
    "list-ts": "find src -name '*.ts*' | grep -v '.snap$' | xargs echo",
    "list-scss": "find src -name '*.scss' | xargs echo",
    "fix-prettier": "prettier --write $(npm run --silent list-ts) $(npm run --silent list-scss)",
    "fix-eslint": "eslint --fix $(npm run --silent list-ts)",
    "\n==================== BACK ====================": "",
    "back:start": "npm run lint-node && DATABASE_URL=$(contrib/db/env dev) npm run ts-node src/backend/index.ts",
    "back:build": "rm -rf build && tsc --project . --outDir build --noEmit false --target es2020 --module commonjs",
    "\n==================== FRONT ====================": "",
    "front:start": "npm run lint-node && BROWSER=none react-scripts start",
    "front:build": "npm run lint-node && react-scripts build",
    "front:deploy": "npm run front:build && aws --profile nightbear s3 cp --acl public-read --cache-control=no-store,must-revalidate --recursive build s3://aws-static-site---stage-nightbear-fi/",
    "\n==================== DB ====================": "",
    "db:reset": "docker-compose stop && docker-compose rm -f && docker-compose up -d && sleep 5 && npm run db:migrate",
    "db:migrate": "contrib/db/migrate test && contrib/db/migrate dev",
    "db:types": "pgtyped --config pgtyped-config.json",
    "\n==================== UTILS ====================": "",
    "ts-node": "NODE_PATH=src DATABASE_URL=$(contrib/db/env dev) ts-node --compiler-options '{\"module\":\"commonjs\"}'"
  },
  "lambdaDependencies": [
    "@pgtyped/runtime",
    "axios",
    "body-parser",
    "check-node-version",
    "cors",
    "debug",
    "express",
    "lodash",
    "luxon",
    "pg",
    "pushover-notifications",
    "zod"
  ],
  "dependencies": {
    "@pgtyped/cli": "2.3.0",
