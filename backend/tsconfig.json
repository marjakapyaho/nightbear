{
  "compilerOptions": {
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "lib": ["ES2021", "DOM"],
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "./build",
    "sourceMap": true,
    "target": "ES2021",
    "resolveJsonModule": true,
    "paths": {
      "@nightbear/shared": ["../shared/src"]
    }
  },
  "include": [
    "api/**/*.ts",
    "cronjobs/**/*.ts",
    "db/**/*.ts",
    "migrations/**/*.ts",
    "utils/**/*.ts",
    "../shared/**/*.ts"
  ]
}
