{
  "transforms": [
    {
      "mode": "sql",
      "include": "**/*.sql",
      "emitTemplate": "{{dir}}/{{name}}.queries.ts"
    }
  ],
  "srcDir": "./src/backend/db",
  "camelCaseColumnNames": true,
  "typesOverrides": {
    "json": "any",
    "jsonb": "any",
    "numeric": "number",
    "timestamptz": {
      "parameter": "string | Date",
      "return": "string"
    }
  }
}
