{
  "compilerOptions": {
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "lib": ["ES2021", "DOM"],
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "./dist",
    "sourceMap": true,
    "target": "ES2021",
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "files": true
  }
}
